{
    "i18n": true,
    "type": "tabs",
    "items": {
        "general": {
            "type": "panel",
            "label": "general",
            "items": {
                "mqttServer": {
                    "type": "checkbox",
                    "label": "mqttServer",
                    "default": true,
                    "newLine": true,
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "mqttIp": {
                    "type": "text",
                    "label": "mqttIp",
                    "newLine": true,
                    "disabled": "data.mqttServer",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "mqttPort": {
                    "type": "text",
                    "label": "mqttPort",
                    "newLine": false,
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "mqttUsername": {
                    "type": "text",
                    "label": "mqttUser",
                    "newLine": true,
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "mqttPassword": {
                    "type": "password",
                    "label": "mqttPassword",
                    "newLine": false,
                    "validator": "data.mqttPassword.length > 5",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "pw1": {
                    "type": "password",
                    "label": "Service-Pin (numbers only)",
                    "newLine": true,
                    "validator": "data.pw1.search(/[^0-9]+/g) === -1",
                    "validatorNoSaveOnError": true,
                    "validatorErrorText": "mustBeNumber",
                    "xs": 12,
                    "sm": 8,
                    "md": 6,
                    "lg": 4,
                    "xl": 3
                },
                "_header": {
                    "type": "header",
                    "label": "Not used",
                    "size": 3,
                    "text": "Not used",
                    "hidden": "true",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "topic": {
                    "type": "text",
                    "label": "topic",
                    "newLine": true,
                    "hidden": "true",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "name": {
                    "type": "text",
                    "label": "name",
                    "newLine": false,
                    "hidden": "true",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "timeout": {
                    "type": "number",
                    "label": "timeout",
                    "newLine": true,
                    "hidden": "true",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "mediaid": {
                    "type": "text",
                    "label": "mediaid",
                    "newLine": false,
                    "hidden": "true",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "onlyStartFromSystemConfig": {
                    "type": "checkbox",
                    "label": "onlyStartFromSystemConfig",
                    "default": true,
                    "newLine": true,
                    "hidden": "true",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "logUnknownTokens": {
                    "type": "checkbox",
                    "label": "logUnknownTokens",
                    "default": false,
                    "newLine": true,
                    "hidden": "true",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "doubleClickTime": {
                    "type": "number",
                    "label": "doubleClickTime",
                    "default": 350,
                    "min": 1,
                    "max": 2000,
                    "newLine": true,
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                }
            }
        },
        "overview": {
            "type": "panel",
            "label": "Panels",
            "items": {
                "panels": {
                    "type": "table",
                    "label": "panels",
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "xl": 12,
                    "uniqueColumns": [
                        "name",
                        "topic",
                        "ip"
                    ],
                    "items": [
                        {
                            "type": "text",
                            "attr": "id",
                            "label": "Id",
                            "validator": "data.id",
                            "validatorNoSaveOnError": true,
                            "readOnly": true
                        },
                        {
                            "type": "text",
                            "attr": "ip",
                            "validator": "data.ip",
                            "default": "",
                            "label": "ip",
                            "readOnly": true
                        },
                        {
                            "type": "text",
                            "attr": "name",
                            "label": "panelName",
                            "readOnly": false,
                            "validatorErrorText": "mustBeUnique"
                        },
                        {
                            "type": "text",
                            "attr": "topic",
                            "label": "panelTopic",
                            "readOnly": true,
                            "validatorErrorText": "mustBeUnique"
                        },
                        {
                            "attr": "_RefreshDevices",
                            "type": "sendTo",
                            "label": "Refresh Device",
                            "command": "RefreshDevices",
                            "jsonData": "{\"id\": \"${data.id}\", \"name\": \"${data.name}\", \"topic\": \"${data.topic}\", \"ip\": \"${data.ip}\"}",
                            "showProcess": true,
                            "useNative": true,
                            "timeout": 8000,
                            "disabled": "!data.topic || !data.name"
                        }
                    ]
                },
                "_header2": {
                    "type": "header",
                    "label": "TasmotaDeviceTools",
                    "text": "TasmotaDeviceTools",
                    "size": 3,
                    "newLine": true
                },
                "_selectTool": {
                    "type": "select",
                    "label": "SelectTool",
                    "default": 1,
                    "options": [
                        {
                            "label": "TasmotaTool",
                            "value": "1"
                        },
                        {
                            "label": "BerryTool",
                            "value": "2"
                        },
                        {
                            "label": "TFTTool",
                            "value": "3"
                        }
                    ]
                },
                "internalServerIp": {
                    "type": "ip",
                    "label": "internalServerIp",
                    "noInternal": true,
                    "listenOnAllPorts": false,
                    "onlyIp4": true,
                    "newLine": true,
                    "validator": "(data.internalServerIp.search(/^[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}$/g) !== -1 && data.internalServerIp !== '127.0.0.1' )",
                    "hidden": "!data.mqttServer || (data._selectTool !== '1')",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "_tasmotaIP": {
                    "type": "text",
                    "label": "tasmotaIP",
                    "newLine": true,
                    "validator": "data._tasmotaIP.search(/^[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}$/g) !== -1",
                    "validatorErrorText": "mustBeIp",
                    "hidden": "data._selectTool == '0'",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "_tasmotaName":{
                    "type": "text",
                    "label": "_tasmotaName",
                    "validator": "",
                    "hidden": "data._selectTool != '1'",
                    "default": "",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "_tasmotaTopic": {
                    "type": "text",
                    "label": "tasmotaTopic",
                    "validator": "data._tasmotaTopic.search(/^[a-zA-Z][\\w/]+$/g) !== -1",
                    "hidden": "data._selectTool != '1'",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "_tasmotaAddTableSendTo": {
                    "type": "sendTo",
                    "label": "tasmotaAddTableSendTo",
                    "jsonData": "{ \"tasmotaName\": \"${data._tasmotaName}\", \"tasmotaIP\": \"${data._tasmotaIP}\", \"tasmotaTopic\":\"${data._tasmotaTopic}\", \"mqttServer\": data.mqttServer, \"mqttIp\": \"${data.mqttIp}\", \"mqttPort\": data.mqttPort, \"mqttUsername\": \"${data.mqttUsername}\", \"mqttPassword\": \"${data.mqttPassword}\", \"internalServerIp\": \"${data.internalServerIp}\" }",
                    "showProcess": true,
                    "command": "tasmotaAddTableSendTo",
                    "disabled": "return !data._tasmotaIP || \
                     (data.mqttServer && (!data.internalServerIp || data.internalServerIp.search(/^[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}$/g) === -1 || data.internalServerIp === '127.0.0.1')) ||\
                     !data._tasmotaIP || data._tasmotaIP.search(/^[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}$/g) === -1 || \
                     !data._tasmotaTopic || data._tasmotaTopic.search(/^[a-zA-Z][\\w/]+$/g) === -1 || \
                     (!data.mqttServer && !data.mqttIp ) || !data.mqttPort || \
                     !data.mqttUsername || !data.mqttPassword || !data._tasmotaName",
                    "newLine": false,
                    "reloadBrowser": true,
                    "variant": "contained",
                    "hidden": "data._selectTool != '1'"
                },
                "_tasmotaSendTo": {
                    "type": "sendTo",
                    "label": "tasmotaSendTo",
                    "jsonData": "{ \"tasmotaName\": \"${data._tasmotaName}\", \"tasmotaIP\": \"${data._tasmotaIP}\", \"tasmotaTopic\":\"${data._tasmotaTopic}\", \"mqttServer\": \"${data.mqttServer}\", \"mqttIp\": \"${data.mqttIp}\", \"mqttPort\": data.mqttPort, \"mqttUsername\": \"${data.mqttUsername}\", \"mqttPassword\": \"${data.mqttPassword}\", \"internalServerIp\": \"${data.internalServerIp}\" }",
                    "showProcess": true,
                    "command": "tasmotaSendTo",
                    "disabled": "return !data._tasmotaIP || \
                     (data.mqttServer && (!data.internalServerIp || data.internalServerIp.search(/^[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}$/g) === -1 || data.internalServerIp === '127.0.0.1')) ||\
                     !data._tasmotaIP || data._tasmotaIP.search(/^[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}$/g) === -1 || \
                     !data._tasmotaTopic || data._tasmotaTopic.search(/^[a-zA-Z][\\w/]+$/g) === -1 || \
                     (!data.mqttServer && !data.mqttIp ) || !data.mqttPort || \
                     !data.mqttUsername || !data.mqttPassword || !data._tasmotaName",

                    "newLine": true,
                    "variant": "contained",
                    "hidden": "data._selectTool != '1'"
                },
                
                "_berryInstallSendTo": {
                    "type": "sendTo",
                    "label": "berryInstallSendTo",
                    "jsonData": "{\"tasmotaIP\": \"${data._tasmotaIP}\"}",
                    "showProcess": true,
                    "command": "berryInstallSendTo",
                    "disabled": "!data._tasmotaIP || data._tasmotaIP.search(/^[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}$/g) === -1",
                    "newLine": true,
                    "variant": "contained",
                    "hidden": "data._selectTool != '2'"
                },
                "_tftInstallSendTo": {
                    "type": "sendTo",
                    "label": "tftInstallSendTo",
                    "jsonData": "{\"tasmotaIP\": \"${data._tasmotaIP}\", \"internalServerIp\": \"${data.internalServerIp}\"}",
                    "showProcess": true,
                    "command": "tftInstallSendTo",
                    "disabled": "!data._tasmotaIP || data._tasmotaIP.search(/^[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}$/g) === -1",
                    "newLine": true,
                    "variant": "contained",
                    "hidden": "data._selectTool != '3'"
                }
            }
        },
        "pageQR": {
            "type": "panel",
            "label": "Page QR",
            "items": {
                "pageQRdata": {
                    "type": "accordion",
                    "label": "pageQRdata",
                    "titleAttr" : "pageName",
                    "items": [
                        {
                            "attr": "pageName",
                            "xs": 12,
                            "sm": 12,
                            "md": 6,
                            "lg": 4,
                            "xl": 4,
                            "type": "text",
                            "label": "pageName",
                            "default": "Unique Name"
                        },
                        {
                            "attr": "headline",
                            "xs": 12,
                            "sm": 12,
                            "md": 6,
                            "lg": 4,
                            "xl": 4,
                            "type": "text",
                            "label": "Headline",
                            "default": ""
                        },
                        {
                            "attr": "selType",
                            "xs": 12,
                            "sm": 12,
                            "md": 6,
                            "lg": 4,
                            "xl": 4,
                            "newLine": true,
                            "type": "select",
                            "label": "pageQRselType",
                            "default": 0,
                            "options": [
                                {
                                    "label": "FREE",
                                    "value": 0
                                },
                                {
                                    "label": "Wifi",
                                    "value": 1
                                },
                                {
                                    "label": "URL",
                                    "value": 2
                                },
                                {
                                    "label": "TEL",
                                    "value": 3
                                }
                            ]
                        },
                        {
                            "attr": "SSIDURLTEL",
                            "xs": 12,
                            "sm": 12,
                            "md": 6,
                            "lg": 4,
                            "xl": 4,
                            "hidden": "data.selType < 1",
                            "type": "text",
                            "label": "SSID - URL - TEL",
                            "default": ""
                        },
                        {
                            "attr": "wlanhidden",
                            "xs": 12,
                            "sm": 12,
                            "md": 6,
                            "lg": 4,
                            "xl": 4,
                            "type": "checkbox",
                            "label": "wlanhidden",
                            "hidden": "data.selType !== 1",
                            "default": false
                        },
                        {
                            "type": "select",
                            "xs": 12,
                            "sm": 12,
                            "md": 6,
                            "lg": 4,
                            "xl": 4,
                            "newLine": true,
                            "label": "wlantype",
                            "hidden": "data.selType !== 1",
                            "attr": "wlantype",
                            "options": [
                                {
                                    "label": "nopass",
                                    "value": "nopass"
                                },
                                {
                                    "label": "WPA",
                                    "value": "WPA"
                                },
                                {
                                    "label": "WPA2",
                                    "value": "WPA2"
                                },
                                {
                                    "label": "WPA3",
                                    "value": "WPA3"
                                },
                                {
                                    "label": "WEP",
                                    "value": "WEP"
                                }
                            ]
                        },
                        {
                            "attr": "qrPass",
                            "xs": 12,
                            "sm": 12,
                            "md": 6,
                            "lg": 4,
                            "xl": 4,
                            "type": "select",
                            "label": "qrPass",
                            "hidden": "data.selType !== 1",
                            "options": [
                                {
                                    "label": "none",
                                    "value": 0
                                },
                                {
                                    "label": "Password1",
                                    "value": 1
                                },
                                {
                                    "label": "Password2",
                                    "value": 2
                                },
                                {
                                    "label": "Password3",
                                    "value": 2
                                }
                            ]
                        },
                        {
                            "attr": "pwdhidden",
                            "xs": 12,
                            "sm": 12,
                            "md": 6,
                            "lg": 4,
                            "xl": 4,
                            "type": "checkbox",
                            "label": "pwdhidden",
                            "hidden": "data.selType !== 1",
                            "default": false
                        },
                        {
                            "attr": "setState",
                            "xs": 12,
                            "sm": 12,
                            "md": 8,
                            "lg": 8,
                            "xl": 8,
                            "type": "objectId",
                            "label": "Switch",
                            "hidden": "data.selType !== 1",
                            "filterFunc": "return obj.common.type === 'boolean' && obj.common.role === 'switch' && obj.common.write"
                        }
                    ]
                },
                "pageQRpwd1": {
                    "type": "password",
                    "label": "Password1",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "pageQRpwd2": {
                    "type": "password",
                    "label": "Password2",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                },
                "pageQRpwd3": {
                    "type": "password",
                    "label": "Password3",
                    "xs": 12,
                    "sm": 12,
                    "md": 6,
                    "lg": 4,
                    "xl": 4
                }
            }
        }
    }
}